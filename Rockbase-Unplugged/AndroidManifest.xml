<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rockbase.unplugged"
          android:versionCode="4"
          android:versionName="1.3">
    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name" android:icon="@drawable/rbu_icon">
        <activity
                android:name=".activities.MainActivity"
                android:theme="@style/Theme.Rockbase"
                android:screenOrientation="portrait"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.CreditsActivity"
                android:theme="@style/Theme.Rockbase"
                />
    </application>
</manifest> 
